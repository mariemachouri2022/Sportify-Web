{% extends 'equipe/base.html.twig' %}

{% block body %}
    <h1>Liste des cat√©gories</h1>
    <div class="container">
        <div class="row">
            {% for categorie in pagination %}
                <div class="col-sm-4">
                    <div class="card">
                        <img src="{{ asset(categorie.image) }}" alt="{{ categorie.nom }}" class="img-responsive">
                        <div class="card-body">
                            <h4><b>{{ categorie.nom }}</b></h4> 
                            <p>{{ categorie.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Pagination -->
    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
