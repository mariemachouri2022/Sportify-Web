{% extends 'categorie/admin.html.twig' %}

{% block title %}Equipe{% endblock %}

{% block body %}
    <h1>Equipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ equipe.IDEquipe }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ equipe.nom }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ equipe.niveau }}</td>
            </tr>
            <tr>
                <th>Israndom</th>
                <td>{{ equipe.israndom ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ equipe.rank }}</td>
            </tr>
            <tr>
                <th>Players</th>
                <td>
                    <ul>
                        {% for utilisateur in equipe.utilisateurs %}
                            <li>{{ utilisateur.nom }} {{ utilisateur.prenom }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_equipe_index') }}">back to list</a>

    <a href="{{ path('app_equipe_edit', {'IDEquipe': equipe.IDEquipe}) }}">edit</a>

    {{ include('equipe/_delete_form.html.twig') }}

    <button onclick="extractAsPDF()">Extract as PDF</button>

    <script>
        function extractAsPDF() {
            // Call your backend route to generate the PDF
            window.location.href = "{{ path('equipe_pdf', {'id': equipe.IDEquipe}) }}";
        }
    </script>
{% endblock %}