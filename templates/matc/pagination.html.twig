{% extends 'base.html.twig' %}


{% if pagination.totalPages > 1 %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pagination.previous is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_matc_pagination', {'page': pagination.previous}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            {% endif %}

            {% for page in 1..pagination.totalPages %}
                <li class="page-item {% if page == pagination.currentPage %}active{% endif %}">
                    <a class="page-link" href="{{ path('app_matc_pagination', {'page': page}) }}">{{ page }}</a>
                </li>
            {% endfor %}

            {% if pagination.next is defined %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_matc_pagination', {'page': pagination.next}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
