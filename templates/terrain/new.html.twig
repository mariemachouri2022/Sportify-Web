{% extends 'equipe/base.html.twig' %}

{% block title %}New Terrain{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 10px 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Create New Terrain</div>

                    <div class="card-body">
                        {{ include('terrain/_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_terrain_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %}
