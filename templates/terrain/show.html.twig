{% extends 'base.html.twig' %}

{% block title %}Terrain{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container {
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%;
            max-width: 100%;
            margin-bottom: 1rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .btn {
            border-radius: 25px;
            padding: 8px 16px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Terrain</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ terrain.getIdTerrain() }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ terrain.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">TypeSurface</th>
                    <td>{{ terrain.typeSurface }}</td>
                </tr>
                <tr>
                    <th scope="row">Localisation</th>
                    <td>{{ terrain.localisation }}</td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ terrain.prix }}</td>
                </tr>
            
                <tr>
                    <th scope="row">ImageTer</th>
                    <td>
                        {% if terrain.imageTer %}
                            <img src="{{ asset('uploads/terrain_images/' ~ terrain.imageTer) }}" alt="Terrain Image" style="max-width: 200px;">
                        {% else %}
                            No image available
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_terrain_index') }}" class="btn btn-primary">Back to list</a>
        <a href="{{ path('app_terrain_edit', {'id': terrain.getIdTerrain()}) }}" class="btn btn-secondary">Edit</a>

        {{ include('terrain/_delete_form.html.twig') }}
    </div>
{% endblock %}
