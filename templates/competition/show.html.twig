{% extends 'homeInterfaces/admin.html.twig' %}

{% block title %}Competition{% endblock %}

{% block body %}
    <h1>Competition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ competition.nom }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ competition.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ competition.date ? competition.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ competition.heure ? competition.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ competition.description }}</td>
            </tr>
            <tr>
                <th>Terrain</th>
                <td>{{ competition.Terrain.nom }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn" href="{{ path('app_competition_index') }}">back to list</button>

    <button class="btn" href="{{ path('app_competition_edit', {'idCompetition': competition.idCompetition}) }}">edit</button>
     
    {{ include('competition/_delete_form.html.twig') }}

    
{% endblock %}
